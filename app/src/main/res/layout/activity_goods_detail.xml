<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#df3c00">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back_nomal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:layout_toRightOf="@id/ivBack"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:textColor="#ffffff"
            />
        <ImageView
            android:id="@+id/ivCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_cart_selected"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/tvCartHint"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignRight="@id/ivCart"
            android:layout_marginTop="4dp"
            android:background="@drawable/cart_hint"
            android:gravity="center"
            android:text="8"
            android:textColor="@color/white"
            />
        <ImageView
            android:id="@+id/ivCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_collect_in"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_share_nor"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:textColor="#000000"
            android:id="@+id/tvEnName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英文名称"
            android:textSize="20sp"/>
        <TextView

            android:id="@+id/tvNowPrice"
            android:layout_toRightOf="@id/tvEnName"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="当前价格"
            android:textSize="20sp"/>
        <TextView
            android:textColor="#000000"
            android:id="@+id/tvChName"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvEnName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中文名称"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_toRightOf="@id/tvChName"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvNowPrice"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="价格"
            android:textSize="20sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <cn.ucai.fulicenter.view.FlowIndicator
            android:id="@+id/fiPicture"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <cn.ucai.fulicenter.view.SlideAutoLoopView
            android:id="@+id/slLoop"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:textColor="#000000"
        android:id="@+id/tvDetails"
        android:layout_marginTop="50dp"
        android:layout_width="250dp"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="@string/textline"
        />

</LinearLayout>
