<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/good_detail_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/common_head_title"/>
        <ImageView
            android:id="@+id/iv_collect_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/bg_collect_in"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:textColor="#000000"
            android:id="@+id/tvEnName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="英文名称"
            android:textSize="20sp"/>
        <TextView

            android:id="@+id/tvNowPrice"
            android:layout_toRightOf="@id/tvEnName"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="当前价格"
            android:textSize="20sp"/>
        <TextView
            android:textColor="#000000"
            android:id="@+id/tvChName"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvEnName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中文名称"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tvPrice"
            android:layout_toRightOf="@id/tvChName"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tvNowPrice"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="价格"
            android:textSize="20sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <cn.ucai.fulicenter.view.SlideAutoLoopView
            android:id="@+id/salv"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="250dp"
            android:layout_height="220dp"
            android:background="@color/good_detail_bg_white"/>
        <cn.ucai.fulicenter.view.FlowIndicator
            android:id="@+id/indicator"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:count="4"
            app:focus="0"
            app:focus_color="@color/good_detaul_flow_indicator_focus"
            app:normal_color="#a1d1d1d1"
            app:r="5dp"
            app:space="3dp"
            />
    </LinearLayout>
    <WebView
        android:id="@+id/wv_good_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/good_detail_bg_white"
        />

</LinearLayout>
